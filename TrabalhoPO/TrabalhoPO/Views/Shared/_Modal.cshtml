@model TrabalhoPO.Models.Modal

<div id='@Model.Id' class='modal-dialog'>
    <div class="modal-content">
        <div class="modal-header@(' ' + Model.ClasseCabecalho)">
            <button type="button" class="close" data-dismiss="modal">
                &times;
            </button>
            <h4 class="modal-title">
                <span class="@Model.IconeCabecalho" aria-hidden="true"></span>
                &nbsp;
                <strong>
                    @Model.Titulo
                </strong>
            </h4>
        </div>
        <div class="modal-body">
            <h4>
                @Model.Mensagem
            </h4>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-custom" data-dismiss="modal">
                @Model.TextoBotao
            </button>
        </div>
    </div>
</div>