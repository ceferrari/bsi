<a href="@Url.Action("Excluir", ViewBag.Modelo, new { id = Model.Id })" class="btn btn-sm btn-danger" data-toggle="modal" data-target="ExcluirModal">
    <span class="fa fa-trash-o" aria-hidden="true"></span>
</a>