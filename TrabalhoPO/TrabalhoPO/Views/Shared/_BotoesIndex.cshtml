@model TrabalhoPO.Models.Interfaces.IIdentificavel

<a href="@Url.Action("Detalhes", ViewBag.Modelo, new { id = Model.Id })" class="btn btn-sm btn-primary">
    <span class="fa fa-eye" aria-hidden="true"></span>
</a>
<a href="@Url.Action("Editar", ViewBag.Modelo, new { id = Model.Id })" class="btn btn-sm btn-warning">
