@model TrabalhoPO.Models.Interfaces.IIdentificavel

<a href="@Url.Action("Detalhes", ViewBag.Modelo, new { id = Model.Id })" class="btn btn-xs btn-primary btn-primary-alpha">
    <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i>
</a>
<a href="@Url.Action("Editar", ViewBag.Modelo, new { id = Model.Id })" class="btn btn-xs btn-warning btn-warning-alpha">
