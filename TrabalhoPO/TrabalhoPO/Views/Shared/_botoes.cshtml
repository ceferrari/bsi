@model TrabalhoPO.Models.Produto

<span class="pull-left">
    <a href="#" onclick="history.back();return false;" class="btn btn-default btn-custom">
        <span class="fa fa-arrow-left" aria-hidden="true"></span>
        Voltar
    </a>
</span>
<span class="pull-right">
    @if (ViewBag.View != "Criar")
    {
        <a href="@Url.Action("Criar", "Produtos")" class="btn btn-success btn-custom">
            <span class="fa fa-plus" aria-hidden="true"></span>
            Novo
        </a>
        <a href="#" onclick="excluirModal(@Model.Id);" class="btn btn-danger btn-custom">
            <span class="fa fa-trash-o" aria-hidden="true"></span>
            Excluir
        </a>
    }
    @if (ViewBag.View == "Detalhes")
    {
        <a href="@Url.Action("Editar", "Produtos", new { id = Model.Id })" class="btn btn-warning btn-custom">
            <span class="fa fa-edit" aria-hidden="true"></span>
            Editar
        </a>
    }
    @if (ViewBag.View == "Editar")
    {
        <button type="submit" class="btn btn-primary btn-custom">
            <span class="fa fa-save" aria-hidden="true"></span>
            Salvar
        </button>
    }
</span>
