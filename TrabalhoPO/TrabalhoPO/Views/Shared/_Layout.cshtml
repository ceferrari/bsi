<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width">
    <title>@(ViewBag.Title == "Lista" ? "Lista de " + ViewBag.Modelo + "s" : ViewBag.Title + " " + ViewBag.Modelo) - Trabalho PO</title>
    <meta name="description" content="Trabalho PO">
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/main.min.css")
</head>
<body>
    @if (!Request.IsAuthenticated || ViewBag.Title == "Login" || ViewBag.Title == "Register")
    {
        <main>
            <div class="container-auth">
                <div class="row-auth">
                    @RenderBody()
                </div>
            </div>
        </main>
    }
    else
    {
        <header>
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Trabalho PO", "Index", "Produtos", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="@Url.Action("Index", "Produtos")">
                                    <span class="fa fa-list-ol" aria-hidden="true"></span>
                                    Produtos
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Categorias")">
                                    <span class="fa fa-list-ol" aria-hidden="true"></span>
                                    Categorias
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="@Url.Action("Logout", "Auth")">
                                    <span class="fa fa-sign-out" aria-hidden="true"></span>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            <article>
                <div class="container">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </article>
        </main>
    }
    @Scripts.Render("~/Scripts/jquery-2.2.3.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/main.min.js")
</body>
</html>