@model TrabalhoPO.Models.Produto

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            <span class="fa fa-warning" aria-hidden="true"></span>
            &nbsp;
            <strong>Excluir Produto</strong>
        </h4>
    </div>
    <div class="modal-body">
        <h4>Tem certeza que deseja excluir o produto <strong>@Model.Id - @Model.Descricao</strong> ?</h4>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger btn-custom" data-dismiss="modal" onclick="exclui(@Model.Id);">
            Confirmar
        </button>
        <button type="button" class="btn btn-default btn-custom" data-dismiss="modal">
            Fechar
        </button>
    </div>
</div>

<script type="text/javascript">
    function exclui(Id) {
        var url = "@Url.Action("Excluir", "Produtos")";
        $.post(url, { id: Id }, function (resposta) {
            if ($("#Produto" + resposta.Id).length) {
                $("#Produto" + resposta.Id).remove();
            }
            else {
                window.location.href = "@Url.Action("Index", "Produtos")";
            }
        });
    }
</script>