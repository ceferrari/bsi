@model TrabalhoPO.Models.Auth

@{
    ViewBag.Titulo = "Login";
    ViewBag.Modelo = "Auth";
    ViewBag.Acao = "Login";
}

@using (Html.BeginForm((string)ViewBag.Acao, (string)ViewBag.Modelo, FormMethod.Post, new { @class = "form-horizontal form-auth" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group text-center">
        <h2>Login</h2>
        <div class="col-sm-12 text-danger">
            @Html.ValidationSummary(true)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Email, String.Empty, new { @class = "control-label" })
        <div class="col-sm-12 input-group">
            <div class="input-group-addon">
                <i class="fa fa-at" aria-hidden="true"></i>
            </div>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", placeholder = "E-mail" })
        </div>
        <div class="col-sm-12 text-danger">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Senha, String.Empty, new { @class = "control-label" })
        <div class="col-sm-12 input-group">
            <div class="input-group-addon">
                <i class="fa fa-asterisk" aria-hidden="true"></i>
            </div>
            @Html.PasswordFor(x => x.Senha, new { @class = "form-control", placeholder = "Senha" })
        </div>
        <div class="col-sm-12 text-danger">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 pr5">
            <a href="@Url.Action("Register", "Auth")" class="btn btn-primary btn-block btn-custom">
                <i class="fa fa-user-plus" aria-hidden="true"></i>
                Registrar
            </a>
        </div>
        <div class="col-sm-6 pl5">
            <button type="submit" class="btn btn-primary btn-block btn-custom">
                <i class="glyphicon glyphicon-log-in" aria-hidden="true"></i>
                Entrar
            </button>
        </div>
    </div>
}