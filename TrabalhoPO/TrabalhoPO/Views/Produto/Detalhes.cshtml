@model TrabalhoPO.Models.Produto

@{
    ViewBag.Titulo = "Detalhes do Produto";
    ViewBag.Modelo = "Produto";
    ViewBag.Acao = "Detalhes";
}

<h2>@ViewBag.Titulo</h2>
<hr />

<div class="form-horizontal">

    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.Id, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.Id, "{0:N0}", new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Descricao, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Preco, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.Preco, "{0:C}", new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EstoqueAtual, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.EstoqueAtual, "{0:N0}", new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EstoqueMinimo, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.EstoqueMinimo, "{0:N0}", new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.PrecisaReposicao, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.PrecisaReposicao, (Model.PrecisaReposicao == true ? "Sim" : "Não"), new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Categoria, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.Categoria,
                ((ViewBag.Categorias as IList<TrabalhoPO.Models.Categoria>).Where(x => x.Id == Model.Categoria).First().Descricao),
                new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DataAlteracao, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.DataAlteracao, "{0:dd/MM/yyyy @ HH:mm:ss}", new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_BotoesCrud", Model)
        </div>
    </div>
</div>