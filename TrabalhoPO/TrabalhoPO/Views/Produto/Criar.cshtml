@model TrabalhoPO.Models.Produto

@{
    ViewBag.Titulo = "Novo Produto";
    ViewBag.Modelo = "Produto";
    ViewBag.Acao = "Criar";
}

<h2>@ViewBag.Titulo</h2>
<hr />

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal form-crud" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("IdAux", new { @class = "col-sm-2 control-label hidden" })
        @Html.LabelFor(x => x.Id, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-9">
            @Html.TextBox("IdAux", (string)ViewBag.NextId.ToString("N0"), new { @class = "form-control", disabled = "disabled" })
            @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @type = "hidden" })
        </div>
        <div class="col-sm-9 col-sm-offset-2 text-danger">
            @Html.ValidationMessageFor(x => x.Id)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Descricao, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control" })
        </div>
        <div class="col-sm-9 col-sm-offset-2 text-danger">
            @Html.ValidationMessageFor(x => x.Descricao)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Preco, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-9 input-group">
            <span class="input-group-addon cinza"><strong>R$</strong></span>
            @Html.TextBoxFor(x => x.Preco, "{0:N2}", new { @class = "form-control" })
        </div>
        <div class="col-sm-9 col-sm-offset-2 text-danger">
            @Html.ValidationMessageFor(x => x.Preco)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EstoqueAtual, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-9 input-group">
            @Html.TextBoxFor(x => x.EstoqueAtual, "{0:N0}", new { @class = "form-control" })
            <a href="#" onclick="diminuiAtual();" class="input-group-addon">
                <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
            </a>
            <a href="#" onclick="aumentaAtual();" class="input-group-addon">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </div>
        <div class="col-sm-9 col-sm-offset-2 text-danger">
            @Html.ValidationMessageFor(x => x.EstoqueAtual)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EstoqueMinimo, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-9 input-group">
            @Html.TextBoxFor(x => x.EstoqueMinimo, "{0:N0}", new { @class = "form-control" })
            <a href="#" onclick="diminuiMinimo();" class="input-group-addon">
                <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
            </a>
            <a href="#" onclick="aumentaMinimo();" class="input-group-addon">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </div>
        <div class="col-sm-9 col-sm-offset-2 text-danger">
            @Html.ValidationMessageFor(x => x.EstoqueMinimo)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Categoria, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.Categoria,
                new SelectList(ViewBag.Categorias, "Id", "Descricao", (ViewBag.Categorias as IList<TrabalhoPO.Models.Categoria>).First().Id),
                new { @class = "form-control" })
        </div>
        <div class="col-sm-9 col-sm-offset-2 text-danger">
            @Html.ValidationMessageFor(x => x.Categoria)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-9 col-sm-offset-2">
            @Html.Partial("_Botoes", Model)
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/Scripts/produto")
}