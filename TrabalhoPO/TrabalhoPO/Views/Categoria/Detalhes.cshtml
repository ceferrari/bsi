@model TrabalhoPO.Models.Categoria

@{
    ViewBag.Titulo = "Detalhes da Categoria";
    ViewBag.Modelo = "Categoria";
    ViewBag.Acao = "Detalhes";
}

<h2>@ViewBag.Titulo</h2>
<hr />

<div class="form-horizontal">

    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.Id, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.Id, "{0:N0}", new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Descricao, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("QtdProdutos", "Qtd. de Produtos", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 mb1">
            @Html.TextBox("QtdProdutos",
            ((ViewBag.Produtos as IList<TrabalhoPO.Models.Produto>).Count(x => x.Categoria == Model.Id).ToString("N0")),
            new { @class = "form-control", disabled = "true" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_BotoesCrud", Model)
        </div>
    </div>
</div>