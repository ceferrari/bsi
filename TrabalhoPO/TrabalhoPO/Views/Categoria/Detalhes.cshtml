@model TrabalhoPO.Models.Categoria

@{
    ViewBag.Titulo = "Detalhes da Categoria";
    ViewBag.Modelo = "Categoria";
    ViewBag.Acao = "Detalhes";
}

<h2>@ViewBag.Titulo</h2>
<hr />

<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="hidden">
                    <th class="col-sm-4">Campo</th>
                    <th class="col-sm-8">Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <strong>Id</strong>
                    </td>
                    <td>
                        @Model.Id
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Descrição</strong>
                    </td>
                    <td>
                        @Model.Descricao
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Qtd. Produtos</strong>
                    </td>
                    <td>
                        @((ViewBag.Produtos as IList<TrabalhoPO.Models.Produto>).Count(x => x.Categoria == Model.Id).ToString("N0"))
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Data Alteração</strong>
                    </td>
                    <td>
                        @Model.DataAlteracao.Value.ToString("dd/MM/yyyy")
                        @@
                        @Model.DataAlteracao.Value.ToString("HH:mm:ss")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.Partial("_Botoes", Model)
        </div>
    </div>
</div>