@model TrabalhoPO.Models.Categoria

@{
    ViewBag.Titulo = "Editar Categoria";
    ViewBag.Modelo = "Categoria";
    ViewBag.Acao = "Editar";
}

<h2>@ViewBag.Titulo</h2>
<hr />

@if (ViewBag.Message != null)
{
    <div class="row text-center">
        <div class="col-sm-10 center-block alert alert-success">
            <span class="fa fa-check" aria-hidden="true"></span>
            @ViewBag.Message
        </div>
    </div>
}

@using (Html.BeginForm((string)ViewBag.Acao, (string)ViewBag.Modelo, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("IdAux", null, new { @class = "col-sm-2 control-label hidden" })
        @Html.LabelFor(x => x.Id, "Id:", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-9">
            @Html.TextBox("IdAux", Model.Id.ToString("N0"), new { @class = "form-control", disabled = "disabled" })
            @Html.TextBoxFor(x => x.Id, Model.Id.ToString(), new { @class = "form-control", @type = "hidden" })
        </div>
        <div class="col-sm-9 col-sm-offset-2 text-danger">
            @Html.ValidationMessageFor(x => x.Id)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Descricao, "Descrição:", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Descricao, Model.Descricao, new { @class = "form-control" })
        </div>
        <div class="col-sm-9 col-sm-offset-2 text-danger">
            @Html.ValidationMessageFor(x => x.Descricao)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-9 col-sm-offset-2">
            @Html.Partial("_Botoes", Model)
        </div>
    </div>
}